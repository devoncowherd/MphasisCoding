<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/emailShortDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="emailShortDesc"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/fromDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="emailShortDesc"
        app:layout_constraintTop_toBottomOf="@id/emailShortDesc"/>
    <TextView
        android:id="@+id/priorityIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="emailShortDesc"
        app:layout_constraintTop_toBottomOf="@id/fromDate"/>
    <TextView
        android:id="@+id/readIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="emailShortDesc"
        app:layout_constraintTop_toBottomOf="@id/priorityIndicator"/>

</androidx.constraintlayout.widget.ConstraintLayout>